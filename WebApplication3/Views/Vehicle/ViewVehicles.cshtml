@model List<WebApplication3.Models.TableViewModels.VehicleTableViewModel>
@{
    ViewBag.Title = "ViewVehicles";
}

<h2>ViewVehicles</h2>

<div class="row">
    <div class="row">
        <h4>Modelo</h4>
        <form>
            <select>
                <option name="option">Corolla</option>
                <option name="option">Sonata</option>
            </select>
            <input type="submit" class="btn-default" value="Buscar">
        </form>
    </div>
    <div class="col-lg-12">
        <table class="table-bordered">
            <tr>
                <th>Descripcion</th>
                <th>Placa</th>
                <th>Tipo</th>
                <th>Marca</th>
                <th>Modelo</th>
            </tr>
            @foreach (var oElement in Model)
            {

                <tr>
                    <td>@oElement.Descripcion</td>
                    <td>@oElement.NPlaca</td>
                    <td>@oElement.TipoDeVehiculo</td>
                    <td>@oElement.Marca</td>
                    <td>@oElement.Modelo</td>
                </tr>
            }
        </table>
    </div>
</div>


@section scripts{
    <script>
    $(document).ready(function () {
        $("#frm").submit(function (e) {
            e.preventDefault();

            url = "@Url.Content("~/Vehicle/Search")"
            parametros = $(this).serialize();


            $.post(url, parametros, function (data) {
                if (data == 1) {
                    document.location.href = "@Url.Content("~/")";
                }
                else
                {
                    alert(data);
                }
            })
        })
    })
    </script>
}